{
	"name": "officialxviid/CI4Favicon",
	"description": "Auto generate favicons and HTML tags from a PNG file",
	"type": "library",
	"keywords": [
		"favicon",
		"generate",
		"png",
		"ico",
		"codeigniter",
		"codeigniter4"
	],
	"license": "BSD-2-Clause",
	"authors": [
		{
			"name": "XVIID Developer",
			"email": "developer@xviid.net",
			"homepage": "http://www.xviid.net"
		}
	],
	"require": {
		"php": ">=5.3.3",
		"imagine/imagine": "^1.3",
		"codeigniter4/framework": "^4.1"
	},
	"suggest": {
		"ext-imagick": "To use the binary and generate favicon images"
	},
	"bin": [
		"favicon"
	],
	"config": {
		"bin-dir": "bin"
	},
	"autoload": {
		"psr-4": {
			"OfficialXVIID\\CI4Favicon\\": "src/"
		},
		"files": ["src/helpers.php"]
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0"
	}
}
